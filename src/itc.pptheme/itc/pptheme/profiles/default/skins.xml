<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="pptheme">

 <object name="itc_pptheme_custom_images"
    meta_type="Filesystem Directory View"
    directory="itc.pptheme:skins/itc_pptheme_custom_images"/>
 <object name="itc_pptheme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="itc.pptheme:skins/itc_pptheme_custom_templates"/>
 <object name="itc_pptheme_styles"
    meta_type="Filesystem Directory View"
    directory="itc.pptheme:skins/itc_pptheme_styles"/>

 <skin-path name="pptheme" based-on="Plone Default">
  <layer name="itc_pptheme_custom_images"
     insert-after="custom"/>
  <layer name="itc_pptheme_custom_templates"
     insert-after="itc_pptheme_custom_images"/>
  <layer name="itc_pptheme_styles"
     insert-after="itc_pptheme_custom_templates"/>
 </skin-path>

</object>
